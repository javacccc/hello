<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="13"
    android:background="@color/rightmaincolor"
    android:orientation="vertical" >


    <!--上方课程编号的布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:weightSum="6"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="10dp"
            android:src="@drawable/cimage"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程名称:"
                android:textColor="@color/teachername"
                android:textSize="@dimen/x15"
                />
                <TextView
                    android:id="@+id/course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXX"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x15"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teachername"
                    android:textSize="@dimen/x15"
                    android:text="课程编号:"/>
            <TextView
                android:id="@+id/course_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/x15"
                android:text="XXXXXXXX"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teachername"
                android:textSize="@dimen/x15"
                android:text="学时数："/>
                <TextView
                    android:id="@+id/course_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x15"
                    android:text="XXXXXXX"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teachername"
                    android:textSize="@dimen/x20"
                    android:text="教师："/>
               <TextView
                   android:id="@+id/course_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teachername"
                android:textSize="@dimen/x20"
                android:text="XXXX"/>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>






<!--考勤的布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:weightSum="3"
            android:gravity="center_horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:weightSum="0.8"
                android:orientation="vertical"
                android:background="@color/choosecolor">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="@dimen/x20"
                    android:text="选课人数"/>
                <TextView
                    android:id="@+id/choose_num"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/x20"
                    android:textColor="@color/white"
                    android:text="0"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_ll_present"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:background="@color/reallcolor" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:textColor="@color/red"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="@dimen/x20"
                    android:text="实到人数"/>
                <TextView
                    android:id="@+id/present_num"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/x20"
                    android:textColor="@color/red"
                    android:text="0"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:background="@color/queqingcolor">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:textColor="@color/red"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="@dimen/x20"
                    android:text="缺勤人数"/>
                <TextView
                    android:id="@+id/obsent_num"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/x20"
                    android:textColor="@color/red"
                    android:text="0"/>
            </LinearLayout>
        </LinearLayout>

    <!--卡号与学生姓名的显示部分-->
    <LinearLayout
        android:id="@+id/id_ll_cardandname"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:weightSum="10"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/x15"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/white"
            android:text="卡号："/>
        <TextView
            android:id="@+id/id_card_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/red"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/x15"
            android:text=""/>
        <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="@dimen/x15"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@color/white"
        android:text="姓名："/>
        <TextView
            android:id="@+id/id_student_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="@dimen/x15"
            android:textColor="@color/red"
            android:gravity="left|center_vertical"
            android:text=""/>

    </LinearLayout>



    <!--下课时间卡号与学生姓名的显示部分-->
    <LinearLayout
        android:id="@+id/id_ll_afterschool"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:weightSum="10"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_afterClass_Tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/x15"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/red"
            android:text="当前是下课时间，请勿刷卡"/>
    </LinearLayout>

